<tal:block tal:define="checkPermission nocall: context/portal_membership/checkPermission;
    context_state context/plone_context_state">
<div data-role="controlgroup" data-type="horizontal" tal:condition="python:checkPermission('Modify Portal Content', context)">
    <a tal:attributes="href string:${context_state/canonical_object_url}/folder_contents" data-role="button" tal:condition="python: checkPermission('List folder contents', context) and context_state.is_structural_folder">Contents</a>
    <a tal:attributes="href string:${context/absolute_url}/edit" data-role="button">Edit</a>
</div>
</tal:block>