<div id="portal-breadcrumbs"
     i18n:domain="plone"
     tal:define="breadcrumbs view/breadcrumbs;
                 is_rtl view/is_rtl"
     data-role="collapsible" data-mini="true" data-theme="b" data-content-theme="a">
    <h4 i18n:translate="you_are_here">You are here: </h4>
    <ul data-role="listview">
		<li tal:repeat="crumb breadcrumbs">
		  <tal:item tal:define="is_last repeat/crumb/end;
                              url crumb/absolute_url;
                              title crumb/Title">
		    <a href="#"
               tal:omit-tag="not: url"
               tal:condition="python:not is_last"
               tal:attributes="href url"
               tal:content="title">
                crumb
            </a>
            <span id="breadcrumbs-current"
                  tal:condition="is_last"
                  tal:content="title">crumb</span>
            </tal:item>
		</li>
    </ul>
</div>
